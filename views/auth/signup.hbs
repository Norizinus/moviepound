<form action="/signup" method="post">

    <label for="username">Username</label>
    <input name="username" id="username" type="text">

    <label for="password">Password</label>
    <input type="password" id="password" name="password">

    <button type="submit">
        Sign me up!
    </button>


</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}